@model IEnumerable<BO.Link>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2 style="font-size: 10vw; color: #FFCE46; font-weight: bold;">Spots</h2>
</div>
<br />
@using (Html.BeginForm())
{
    <div class="container d-flex h-100">
        <div class="d-flex align-items-start">
            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control fw-bolder border border-dark", style = "width: 250px; border-color:black;" })
            &nbsp;&nbsp;&nbsp;
            <input type="submit" value="Filter" class="btn btn-outline-dark fw-bolder" />
        </div>
    </div>

    <br />
    <br />
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-4 mb-3">
                    <div class="card border-dark mb-3 h-100 bg-light">
                        <div class="card-body">
                            <h5 class="card-title fw-bolder"><img src="@item.Url/favicon.ico" style="width:16px; height:16px;" />  <strong>@item.Title</strong></h5>
                            <p class="card-text fw-bolder">@item.Description</p>
                            <a href="@item.Url" target="_blank" class="btn btn-outline-dark"><span style="font-size:20px; font-weight:bold;">Go →</span></a>
                            <span class="badge badge-pill badge-primary bg-gradient bg-dark">@item.Type</span>
                        </div>
                        <div class="card-footer bg-transparent border-dark text-dark" style="color:white">Submitted By : @item.Person.Name</div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    $(function () {
        $("#SelectCategory").on("change", function () {
            var url = $(this).val();

            if (url) {
                window.location = "/Common/BrowseURL?CategoryId=" + url;
            }
            return false;
        });
    }
</script>