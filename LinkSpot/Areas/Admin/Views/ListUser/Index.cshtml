@model IEnumerable<BO.Person>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2 style="font-size:10vw; font-weight:bold;">Users</h2>
</div>
<br />
<br />
<div class="container">
    <table class="table table-light table-striped border border-dark">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.ActionLink("UserEmail", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "UserEmail", Page = (ViewBag.Page == null ? "1" : ViewBag.Page) },new { @class="text-dark"})
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.ActionLink("Role", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Role", Page = (ViewBag.Page == null ? "1" : ViewBag.Page) }, new { @class = "text-dark" })
                </th>
                <th></th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
            </tr>
        }

    </table>
</div>