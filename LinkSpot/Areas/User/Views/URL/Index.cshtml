@model BO.Link

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2 style="font-size:10vw;font-weight:bold;">Submit <span style="color: #FBC356">Spot</span></h2>
</div>
@using (Html.BeginForm("Create", "URL", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container">
    @if (TempData["Error"] != null)
    {
        <h4 style="font-size:2vw;">@TempData["Error"]</h4>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <h5 class="text-dark fw-bolder">Title</h5>
        <div class="col-md-3">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control border border-dark" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <h5 class="text-dark fw-bolder">Url</h5>
        <div class="col-md-3">
            @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control border border-dark" } })
            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <h5 class="text-dark fw-bolder">Description</h5>
        <div class="col-md-3">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control border border-dark" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <h5 class="text-dark fw-bolder">Category</h5>
        <div class="col-md-3">
            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control border border-dark fw-bolder" })
            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-3">
            <h5 class="text-dark fw-bolder">Type</h5>
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Free",
                    Value = "Free"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Premium",
                    Value = "Premium",
                    Selected = true
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Freemium",
                    Value = "Freemium"
                });
            }
            @Html.DropDownList("Type", listItems, new { @class = "form-control border border-dark fw-bolder" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-outline-dark fw-bolder" style = "padding: 15px 20px; font-size: 20px; border-radius:5px;"/>
        </div>
    </div>
</div>
}

